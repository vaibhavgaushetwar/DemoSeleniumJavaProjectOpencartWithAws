<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Opencart Web app regression suite" thread-count="3"
	parallel="tests" verbose="4">
	<listeners>
		<listener
			class-name="com.qa.opencart.listners.ExtentReportListener">
		</listener>
		<listener
			class-name="com.qa.opencart.listners.TestAllureListener">
		</listener>
<!-- 		<listener -->
<!-- 			class-name="com.qa.opencart.listners.AnnotationTransformer"> -->
<!-- 		</listener> -->
	</listeners>

	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Account Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>


	<test name="ProductInfo Page Test_fireox">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Registration Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test>

